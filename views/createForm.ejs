<%- include('./partials/header') -%>

<section id="about">
  <div class="container">
    <% if(error){ %>
    <div class="alert alert-danger" role="alert">
      <%- error.message %>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <% } %>
    <form method="POST" action="/series/novo-registro">
      <div class="form-group">
        <label for="name">Nome da Serie</label>
        <input type="text" class="form-control" id="name" name="name" placeholder="Digite o nome da serie">
      </div>
      <div class="form-group">
        <label for="status">Status</label>
        <select class="form-control" id="status" name="status">
          <% for(let status in labels){ %>
          <option value="<%- status %>"><%- labels[status]%></option>
          <% } %>
        </select>
      </div>
      <button type="submit" class="btn btn-secondary">Salvar</button>
    </form>
  </div>
</section>
<script>
  setTimeout(()=>$('.alert').alert('close'),2000);
</script>
<%- include('./partials/footer') -%>