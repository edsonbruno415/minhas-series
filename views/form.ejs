<%- include('./partials/header') -%>

<section id="about">
    <div class="container">
        <form method="POST" action="/series/novo-registro">
            <div class="form-group">
              <label for="name">Nome da Serie</label>
              <input type="text" class="form-control" id="name" name="name" placeholder="Digite o nome da serie">
            </div>
            <div class="form-group">
                <label for="status">Status</label>
                <select class="form-control" id="status" name="status">
                    <option value="to-watch">Para Assistir</option>
                    <option value="watching">Assistindo</option>
                    <option value="watched">Assistido</option>
                </select>
              </div>
            <button type="submit" class="btn btn-secondary">Submit</button>
          </form>
    </div>
</section>

<%- include('./partials/footer') -%>