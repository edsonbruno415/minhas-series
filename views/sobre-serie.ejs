<%- include('./partials/header') -%>
<section id="about">
    <div class="container">
        <h2><%- serie.name %></h2>
        <form action="/series/comentario" method="post">
            <input type="hidden" value="<%- serie._id %>" name="id" />
            <div class="form-group">
                <label for="name">Nome</label>
                <input type="text" id="name" name="name" class="form-control" placeholder="Digite seu nome" maxlength="45" />
            </div>
            <div class="form-group">
                <label for="comment">Deixe seu coment√°rio</label>
                <textarea class="form-control" rows="3" id="comment" name="comment"
                    placeholder="Digite aqui a sua mensagem."></textarea>
            </div>
            <button type="submit" class="btn btn-secondary">Enviar</button>
        </form>
        <ul class="list-group mt-4 comments">
            <% for(let comment of serie.comments){ %>
            <li class="list-group-item p-4 mb-2 comment">
                <div class="comment-content">
                    <p class="text-capitalize font-weight-bold"><%- comment.author %></p>
                    <p><%- comment.message %></p>
                </div>
            </li>
            <% }%>
        </ul>
    </div>
</section>
<%- include('./partials/footer') -%>